<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:background="?attr/card_view_background"
        android:id="@+id/pasek"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/spec_misssion_panel"
            android:visibility="visible"
            />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?attr/card_view_header_text"
                android:layout_marginStart="108dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/fast_mission_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_topframe"
                />


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/fast_mission_linear_intro_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fast_mission_name"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="23sp"
                    android:padding="5dp"
                    android:textColor="@color/edug_red"
                    android:text="MISSION STARTCLOCK"
                    android:id="@+id/fast_mission_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/fast_mission_linear_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fast_mission_linear_intro_time"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="?attr/card_view_header_text"
                    android:layout_marginStart="108dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:text="fast mission start"
                    android:id="@+id/fast_mission_intro_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/fast_mission_linear_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/fast_mission_linear_start"
                >
                <ImageView
                    android:layout_marginStart="18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_question"
                    />


            <LinearLayout
                android:layout_marginStart="108dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/fast_mission_linear_textx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow_frame_missions">
                <TextView
                    android:textColor="?attr/card_view_header_text"
                    android:text="fast mission start"
                    android:id="@+id/fast_mission_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/fast_mission_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
            </RelativeLayout>


<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/fast_mission_linear_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/fast_mission_linear_text">

    <ImageView
        android:layout_marginStart="18dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_chat"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="40dp"

        android:id="@+id/answerField"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:theme="@style/floating_layout_style"
        style="@style/floating_layout_style">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_gravity="center"
            android:id="@+id/fast_mission_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="@string/fast_answer"
            android:singleLine="true"/>


    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/fast_mission_answer_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_height="43dp"
        android:textColor="?attr/card_view_header_text"
        android:background="@drawable/rounded_corners_missions_button"
        android:text="WYÅšLIJ" />
</LinearLayout>

            <LinearLayout

                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/fast_mission_linear_finish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fast_mission_linear_answer"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="23sp"
                    android:padding="5dp"
                    android:textColor="@color/edug_red"
                    android:text="MISSION ENDCLOCK"
                    android:id="@+id/fast_mission_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/fast_mission_finish_linear_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fast_mission_linear_finish_time"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="?attr/card_view_header_text"
                    android:layout_marginStart="108dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:text="fast mission start"
                    android:id="@+id/fast_mission_finish_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>