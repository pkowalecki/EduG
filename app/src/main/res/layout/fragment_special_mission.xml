<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:id="@+id/pasek"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_marginStart="23dp"
            android:background="@drawable/spec_misssion_panel"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/pasek"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView

                android:textColor="@color/edug_text_black"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="20dp"
                android:textSize="20sp"
                android:text="MISSION CODENAME"
                android:id="@+id/spec_mission_codename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/shadow_topframe"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/spec_mission_linear_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spec_mission_codename"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    />
            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="20dp"
                android:textSize="23sp"
                android:padding="5dp"
                android:textColor="@color/edug_red"
                android:text="MISSION STARTCLOCK"
                android:id="@+id/spec_mission_missionStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/spec_mission_linear_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spec_mission_linear_start"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="@color/edug_text_black"
                    android:layout_marginStart="90dp"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/spec_mission_introText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="INTRO TEZT" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spec_mission_linear_q1"
                android:layout_below="@id/spec_mission_linear_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_question"
                    />

                <LinearLayout
                    android:background="@drawable/shadow_frame_missions"

                    android:layout_marginStart="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                    android:textColor="@color/edug_text_black"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:id="@+id/spec_mission_question1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SPEC MISSION QUESTION 1"
                    />



                <CheckBox
                    android:id="@+id/spec_mission_question1_ans1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"/>

                <CheckBox
                    android:id="@+id/spec_mission_question1_ans2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"/>

                <CheckBox
                    android:id="@+id/spec_mission_question1_ans3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"/>

                <CheckBox
                    android:id="@+id/spec_mission_question1_ans4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"/>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spec_mission_linear_q2"
                android:layout_below="@id/spec_mission_linear_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_question"
                    />

                <LinearLayout
                    android:background="@drawable/shadow_frame_missions"

                    android:layout_marginStart="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/edug_text_black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:id="@+id/spec_mission_question2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEC MISSION QUESTION 2"
                        />



                    <CheckBox
                        android:id="@+id/spec_mission_question2_ans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question2_ans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question2_ans3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question2_ans4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spec_mission_linear_q3"
                android:layout_below="@id/spec_mission_linear_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_question"
                    />

                <LinearLayout
                    android:background="@drawable/shadow_frame_missions"

                    android:layout_marginStart="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/edug_text_black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:id="@+id/spec_mission_question3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEC MISSION QUESTION 3"
                        />



                    <CheckBox
                        android:id="@+id/spec_mission_question3_ans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question3_ans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question3_ans3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question3_ans4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spec_mission_linear_q4"
                android:layout_below="@id/spec_mission_linear_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_question"
                    />

                <LinearLayout
                    android:background="@drawable/shadow_frame_missions"

                    android:layout_marginStart="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/edug_text_black"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:id="@+id/spec_mission_question4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEC MISSION QUESTION 4"
                        />



                    <CheckBox
                        android:id="@+id/spec_mission_question4_ans1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question4_ans2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question4_ans3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                    <CheckBox
                        android:id="@+id/spec_mission_question4_ans4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="6dp"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="23dp"
                android:id="@+id/spec_mission_linear_finish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spec_mission_linear_q4"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="23sp"
                    android:textColor="@color/edug_red"
                    android:text="MISSION ENDCLOCK"
                    android:id="@+id/spec_mission_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/spec_linear_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/spec_mission_linear_finish_time"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="1dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_bomb"
                    />

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/edug_text_black"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shadow_frame_missions"
                    android:id="@+id/spec_mission_finish_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="FINISH TEXT"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/edug_text_white"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/spec_mission_button"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/spec_linear_finish"
                android:background="@drawable/answer_button"
                android:text="ODPOWIEDZ" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>