<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:background="?attr/card_view_background"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            app:tint="?attr/card_view_icon"
            android:id="@+id/agent_files_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_word_file"/>
        <TextView
            android:textColor="?attr/card_view_text"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/agent_files_image"
            android:layout_marginTop="10dp"
            android:id="@+id/agent_filename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginStart="30dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>