<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/top_navigation_missions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:itemIconTint="@color/top_navbar_color"
            app:itemTextColor="@color/top_navbar_color"
            app:menu="@menu/missions_menu"
            app:labelVisibilityMode="unlabeled"/>

        <ScrollView
            android:layout_below="@id/top_navigation_missions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/missions_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_frame">
                <LinearLayout
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/header_list_missions"
                    android:background="@color/edug_cardView_background">
                <TextView
                    android:id="@+id/mission_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/edug_black"
                    android:textSize="25sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:padding="2dp"
                    android:id="@+id/missions_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_list_missions"
                    android:scrollbars="vertical"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>