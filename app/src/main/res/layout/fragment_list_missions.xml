<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            app:itemIconTint="@color/top_navbar_color"
            app:itemTextColor="@color/top_navbar_color"
            android:id="@+id/top_navigation_missions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:menu="@menu/missions_menu" />

        <ScrollView
            android:layout_below="@id/top_navigation_missions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <RelativeLayout
            android:background="@drawable/shadow_frame"
            android:id="@+id/missions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:id="@+id/mission_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/edug_black"
                android:layout_marginBottom="20dp"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@id/mission_name_text"
            android:id="@+id/missions_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>