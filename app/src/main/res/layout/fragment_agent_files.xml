<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    >
    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:paddingTop="20dp"
        android:id="@+id/top_navigation_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:itemIconTint="@color/top_navbar_color"
        app:itemTextColor="@color/top_navbar_color"
        app:menu="@menu/agent_files_menu"


        />

    <ScrollView
        android:layout_below="@id/top_navigation_files"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


    <RelativeLayout
        android:background="@drawable/shadow_frame"
        android:layout_marginBottom="20dp"
        android:id="@+id/files_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/edug_text_black"
            android:padding="5dp"
            android:id="@+id/file_mission_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="NIEZBÄ˜DZNIK AGENTA LABORATORYJNEGO"

            />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/file_mission_text"
        android:id="@+id/agent_files_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>