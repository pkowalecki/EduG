<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="@color/edug_text_black"
            android:id="@+id/achievements_idm"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"/>
        <TextView
            android:textColor="@color/edug_text_black"
            android:id="@+id/achievements_codename"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_toEndOf="@id/achievements_idm"
            android:layout_toStartOf="@id/achievements_points"
            />
        <TextView
            android:textColor="@color/edug_text_black"
            android:id="@+id/achievements_points"
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>