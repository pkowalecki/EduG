<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="?attr/card_view_background"
        android:id="@+id/pasek"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:background="@drawable/spec_misssion_panel"
            android:visibility="visible"
             />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?attr/card_view_header_text"
                android:layout_marginStart="108dp"
                android:layout_marginEnd="40dp"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/labo_mission_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_topframe"
                />

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/labo_mission_linear_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labo_mission_name"
                android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginStart="18dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_clock"
                />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="23sp"
                    android:padding="5dp"
                    android:textColor="@color/edug_red"
                    android:text="MISSION STARTCLOCK"
                    android:id="@+id/labo_mission_missionStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/labo_mission_linear_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labo_mission_linear_start"
                android:orientation="horizontal">
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="?attr/card_view_header_text"
                    android:layout_marginStart="108dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:text="INTRO TEZT"
                    android:id="@+id/labo_mission_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>

            <LinearLayout

                android:id="@+id/labo_mission_linear_file"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labo_mission_linear_intro"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                >
                <ImageView
                    android:layout_marginStart="18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_file"/>
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="@color/edug_red"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:text="FILE"
                    android:id="@+id/labo_mission_file"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/labo_mission_linear_finish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labo_mission_linear_file"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginStart="18dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    />
                <TextView
                    android:layout_gravity="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="23sp"
                    android:padding="5dp"
                    android:textColor="@color/edug_red"
                    android:text="MISSION FINISH"
                    android:id="@+id/labo_mission_finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/labo_mission_linear_finish_text"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/labo_mission_linear_finish_time"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                >
                <ImageView
                    android:layout_marginStart="18dp"
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_bomb"/>
                <TextView
                    android:background="@drawable/shadow_frame_missions"
                    android:textColor="?attr/card_view_header_text"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center"
                    android:text="FILE"
                    android:id="@+id/labo_mission_finish_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>