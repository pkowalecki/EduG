<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/content_cardview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/card_view_background">

        <TextView
            android:id="@+id/mission_type_bottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textColor="?attr/card_view_text"
            android:textSize="@dimen/xxdpi_card_view_text_size" />

        <TextView
            android:id="@+id/mission_number_bottomSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/mission_type_bottomSheet"
            android:textColor="?attr/card_view_text"
            android:textSize="@dimen/xxdpi_card_view_text_size" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>